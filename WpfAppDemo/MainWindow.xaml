<Window
    x:Class="WpfAppDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WpfAppDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="70"
    Height="45"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="Manual"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <StackPanel x:Name="spTitle" VerticalAlignment="Center" Background="White" MouseLeftButtonDown="Label_MouseLeftButtonDown" MouseRightButtonDown="spTitle_MouseRightButtonDown" Orientation="Vertical">
            <Label HorizontalAlignment="Center" Content="压机位移2" />
            <Label HorizontalAlignment="Center" Content="Value" />
        </StackPanel>
    </Grid>

</Window>
